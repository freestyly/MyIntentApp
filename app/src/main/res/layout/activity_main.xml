<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.freestyly.myintentapp.MainActivity">


    <Button
        android:text="Start Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Start Activity with Extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartActivityWithExtra"
        android:layout_below="@+id/btnStartActivity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Dial Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStartActivityWithExtra"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btnDialAction"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Open Web URL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnOpenWebURL"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Send E-Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOpenWebURL"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/btnSendEMail"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Pic Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnPicImage"
        android:layout_below="@+id/btnSendEMail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
